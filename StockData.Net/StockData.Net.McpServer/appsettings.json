{
  "version": "1.0",
  "providers": [
    {
      "id": "yahoo_finance",
      "type": "YahooFinanceProvider",
      "enabled": true,
      "priority": 1,
      "settings": {
        "_comment": "Provider-specific settings (e.g., API keys) go here",
        "apiKey": "${YAHOO_FINANCE_API_KEY}"
      },
      "healthCheck": {
        "enabled": true,
        "intervalSeconds": 300,
        "timeoutSeconds": 10
      }
    }
  ],
  "routing": {
    "defaultStrategy": "PrimaryWithFailover",
    "dataTypeRouting": {
      "HistoricalPrices": {
        "primaryProviderId": "yahoo_finance",
        "fallbackProviderIds": [],
        "aggregateResults": false,
        "timeoutSeconds": 30
      },
      "StockInfo": {
        "primaryProviderId": "yahoo_finance",
        "fallbackProviderIds": [],
        "aggregateResults": false,
        "timeoutSeconds": 30
      },
      "News": {
        "primaryProviderId": "yahoo_finance",
        "fallbackProviderIds": [],
        "aggregateResults": false,
        "timeoutSeconds": 30
      },
      "MarketNews": {
        "primaryProviderId": "yahoo_finance",
        "fallbackProviderIds": [],
        "aggregateResults": false,
        "timeoutSeconds": 30
      },
      "StockActions": {
        "primaryProviderId": "yahoo_finance",
        "fallbackProviderIds": [],
        "aggregateResults": false,
        "timeoutSeconds": 30
      },
      "FinancialStatement": {
        "primaryProviderId": "yahoo_finance",
        "fallbackProviderIds": [],
        "aggregateResults": false,
        "timeoutSeconds": 30
      },
      "HolderInfo": {
        "primaryProviderId": "yahoo_finance",
        "fallbackProviderIds": [],
        "aggregateResults": false,
        "timeoutSeconds": 30
      },
      "OptionExpirationDates": {
        "primaryProviderId": "yahoo_finance",
        "fallbackProviderIds": [],
        "aggregateResults": false,
        "timeoutSeconds": 30
      },
      "OptionChain": {
        "primaryProviderId": "yahoo_finance",
        "fallbackProviderIds": [],
        "aggregateResults": false,
        "timeoutSeconds": 30
      },
      "Recommendations": {
        "primaryProviderId": "yahoo_finance",
        "fallbackProviderIds": [],
        "aggregateResults": false,
        "timeoutSeconds": 30
      }
    }
  },
  "newsDeduplication": {
    "enabled": true,
    "similarityThreshold": 0.85,
    "timestampWindowHours": 24,
    "compareContent": false,
    "maxArticlesForComparison": 200
  },
  "circuitBreaker": {
    "enabled": true,
    "failureThreshold": 5,
    "halfOpenAfterSeconds": 60,
    "timeoutSeconds": 30
  },
  "performance": {
    "maxConcurrentRequests": 10,
    "connectionPoolSize": 10,
    "idleConnectionTimeoutSeconds": 90
  }
}
